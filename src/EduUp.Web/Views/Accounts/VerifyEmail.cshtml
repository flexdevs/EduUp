@using EduUp.Service.Dtos.Verify;
@model VerifyEmailDto
@{
	Layout = "../Accounts/_AccountLayout.cshtml";
}

<div>
	<form asp-area="" asp-controller="accounts" asp-action="verifyemail" method="post">
		<div class="row">
			<div class="col-lg-12" style="padding-top: 100px">
				<div class="form" style="background-color: #27292a; padding-left: 50px; padding-right:50px ;width: 30%; margin:0 auto; height: 500px">
					<div class="title">Welcome</div>
					<div class="subtitle">Let's enter to your account!</div>

					<div class="input-container ic2">
						<input asp-for="Email" id="email" class="input" type="text" value="@TempData["email"]" readonly="readonly" />
						<span asp-validation-for="Email"></span>
					</div>

					<div class="input-container ic2">
						<input asp-for="Code" id="email" class="input" type="number" placeholder="Your code"/>
						<span asp-validation-for="Code"></span>
					</div>

					<button type="submit" class="submit">Submit</button><br /><br />

				</div>
			</div>
		</div>
	</form>
</div>