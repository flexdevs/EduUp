@using EduUp.Service.Dtos.Accounts;
@model AccountRegisterDto

<div>
	<form asp-area="" asp-controller="accounts" asp-action="login" method="post">
		<div class="row">
			<div class="col-lg-12" >
				<div class="form" style="background-color: #1f2122; width: 35%; margin:0 auto;">

					<div class="title">Welcome</div>
					<div class="subtitle">Let's enter to your account!</div>

					<div class="input-container ic1">
						<input id="firstname" class="input" type="text" placeholder=" " />
						<div class="cut"></div>
						<label for="firstname" class="placeholder">Full name</label>
					</div>

					<div class="input-container ic2">
						<input id="lastname" class="input" type="text" placeholder=" " />
						<div class="cut cut-med"></div>
						<label for="lastname" class="placeholder">Email</label>
					</div>

					<div class="input-container ic2">
						<input id="email" class="input" type="text" placeholder=" " />
						<div class="cut "></div>
						<label for="email" class="placeholder">Password</label>
					</div>

					<button type="text" class="submit">Login</button>
				</div>
			</div>
		</div>
	</form>
</div>>