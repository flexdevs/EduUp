@using EduUp.Service.Dtos.Accounts;
@model AccountLoginDto
@{
	Layout = "../Accounts/_AccountLayout.cshtml";
}
<div>
	<form asp-area="" asp-controller="accounts" asp-action="login" method="post">
		<div class="row">
			<div class="col-lg-12"; style="padding-top: 100px">
				<div class="form" style="background-color: #27292a; padding-left: 50px; padding-right:50px ;width: 30%; margin:0 auto;">
					<div class="title">Welcome</div>
					<div class="subtitle">Let's enter to your account!</div>

					<div class="input-container ic2">
						<input asp-for="Email" id="lastname" class="input" type="text" placeholder=" " />
						<div class="cut cut-med"></div>
						<span class="placeholder" asp-validation-for="Email">Email</span>
					</div>

					<div class="input-container ic2">
						<input asp-for="Password" id="email" class="input" type="text" placeholder=" " />
						<div class="cut "></div>
						<span asp-validation-for="Password" class="placeholder">Password</span>
					</div>

					<button type="submit" class="submit">Login</button><br /><br />
					<div>
						<span class="text subtitle" style="color:#fff">
							Hali a'zo emasmisiz?
								<a class="text" asp-controller="accounts" asp-action="register" style="color:#E75E8D">Ro'yhatdan o'tish</a>
						</span>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>